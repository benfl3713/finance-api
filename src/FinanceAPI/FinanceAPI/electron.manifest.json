{
    "executable": "FinanceAPI",
    "splashscreen": {
        "imageFile": ""
    },
    "name": "FinanceAPI",
    "icon":  "wwwroot/favicon.ico",
    "author": "benfl3713",
    "singleInstance": true,
    "aspCoreBackendPort": 5001,
    "environment": "Development",
    "build": {
        "appId": "com.FinanceAPI.app",
        "productName": "FinanceAPI",
        "copyright": "Copyright Â© 2020",
        "buildVersion": "1.0.0",
        "compression": "maximum",
        "directories": {
            "output": "../../../bin/Desktop"
        },
        "extraResources": [
            {
                "from": "./bin",
                "to": "bin",
                "filter": [ "**/*" ]
            }
        ],
        "files": [
            {
                "from": "./ElectronHostHook/node_modules",
                "to": "ElectronHostHook/node_modules",
                "filter": [ "**/*" ]
            },
            "**/*"
        ]
    }
}